<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/timeLeftHere"
        android:id="@+id/timeLeftHere"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/countdownTime"
        android:id="@+id/countdownTime"
        android:textColor="@color/black"
        android:layout_below="@+id/timeLeftHere"
        android:layout_alignRight="@+id/timeLeftHere"
        android:layout_alignEnd="@+id/timeLeftHere" />
</RelativeLayout>
